- content_for :head do
  = javascript_include_tag "pages/operator/books/new-bundle"
  = stylesheet_link_tag "pages/operator/books/new-bundle", :media => "all"
  :javascript
    window.keyword = "#{@keyword}"

.content-area
  /books-new
  .content-box
    .manage-box
      %a#back{:href => "/operator/books"}
        %img{src: asset_path("web/back2.png")}
      .btn.end-btn{:type => "button"} 
        %img.end{src: asset_path("managecenter/ticker.png")}
        完成

    .manage-content
      .controls.controls-row
        %label.input-caption ISBN号:
        %input.input-area.form-control#book-isbn{:type => "text"}
        %label.input-caption#author 书名:
        %input.input-area.form-control#book-name{:type => "text"}
      .controls.controls-row
        %label.input-caption#book-number 作者:
        %input.input-area.form-control#book-author{:type => "text"}
        %label.input-caption#translator 译者:
        %input.input-area.form-control#book-translator{:type => "text"}
        %label.input-caption 插画作者:
        %input.input-area.form-control#book-illustrator{:type => "text"}
      .controls.controls-row
        %label.input-caption#publisher 出版社:
        %input.input-area.form-control#book-publisher{:type => "text"}
        %label.input-caption 最小适龄:
        %input.input-area.form-control#age-lower-bound{:type => "text"}
        %label.input-caption 最大适龄:
        %input.input-area.form-control#age-upper-bound{:type => "text"}
      .form-inline
        %label.input-caption 标签:
        %span
          %ul#type-tag
            / %li 冒险
            / %li 奇幻       
      .book-introduce
        %span.introduce 书籍介绍:
        %span.wangedit-area
          #edit-area

      = form_tag("/", method: "post", multipart: true, id: "upload-photo-form", class: "hide") do
        = text_field_tag "has_cover"
        = text_field_tag "has_back"
        = file_field_tag "cover_file", { class: "hide", accept: ".jpg,.png" }
        = file_field_tag "back_file", { class: "hide", accept: ".jpg,.png" }

      .cover-back
        %span.cover 封面:
        %a#upload-cover{href: "javascript:void(0);"}
          %img#cover-photo.photo{src: asset_path("web/addcover.png")}

        %span.back 封底:
        %a#upload-back{href: "javascript:void(0);"}
          %img#back-photo.photo{src: asset_path("web/addcover.png")}
