- content_for :head do
  = javascript_include_tag "pages/user_mobile/courses/search_result-bundle"
  = stylesheet_link_tag "pages/user_mobile/courses/search_result-bundle", :media => "all"

- content_for :app_content do
  .head-div.bg1
    %a.back-link#back{href: list_user_mobile_courses_path}
      %img.back{src: asset_path("wap/back.png")}
    %span.title.f16.font-color1.fb 搜索结果 
  .content-div
    .item-div
      - if @course_insts[:data].length == 0
        .undiscover
          %img.undiscover-icon{src: asset_path("wap/empty.png")}
      - else
        - @course_insts[:data].each do |ci|
          .item{"data-id" => ci[:id]}
            .icon-div
              %img.icon{src: asset_path("wap/example.png")}
            .word-div
              .row-div.clearfix
                %span.item-title.f14.fb= ci[:name]
                - if Date.parse(ci[:end_date]).past?
                  %span.item-value.end-register.f12 截止报名
                -else
                  %span.item-value.f12{class: ci[:status_class]}= ci[:status_str]
              .row-div.f12.opacity54
                %span.rank 主讲人：
                %span.speaker= ci[:speaker]
              .row-div.f12.opacity54
                %img.location-icon{src: asset_path("wap/location.png")}
                %span.location= ci[:address]
