- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/courses/pay_success-bundle"
  = stylesheet_link_tag "pages/user_mobile/courses/pay_success-bundle", :media => "all"

- content_for :app_content do
  .content-area
    .desc-div
      .success-div
        .item
          %img.icon{:src => "/assets/web/finish.png"}
          %span.success 支付已完成
        .item
          %span 课程：
          %span= @course.name || @course.course.name
        .item
          %span 将于
          %span.time= @course.start_time
          %span 开始上课，请提前到达～
    .btn-div
      %a.btn#desc{href: "/user_mobile/courses/" + @course.id.to_s} 查看详情
