- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/courses/index-bundle"
  = stylesheet_link_tag "pages/user_mobile/courses/index-bundle", :media => "all"
  :javascript
    window.keyword="#{@keyword}"

- content_for :app_content do
  .content-div
    .head-div.bg1
      %a.back-link#back{href: list_user_mobile_courses_path}
        %img.back{src: asset_path("wap/back.png")}
      %span.title.f16.font-color1.fb 我的课程

    .item-div
      - if @favorites.blank?
        .undiscover
          %img.undiscover-icon{src: asset_path("wap/empty.png")}
      - else
        - @favorites.each do |f|
          .item{data: {url: f.ele_url} }
            .icon-div
              %img.icon{src: f.img_src}
            .word-div
              .row-div.clearfix
                %span.item-title.f14.fb= f.name
                - if Date.parse(f.end_date).past?
                  %span.item-value.end-register.f12 截止报名
                - else
                  %span.item-value.f12{class: f.status_class}= f.status_str
              .row-div.f12.opacity54
                %span.rank 主讲人：
                %span.speaker= f.speaker
              .row-div.f12.opacity54
                %img.location-icon{src: asset_path("wap/location.png")}
                %span.location= f.address
 
