- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/feeds/index-bundle"
  = stylesheet_link_tag "pages/user_mobile/feeds/index-bundle", :media => "all"

- content_for :app_content do
  .content-area
    = render "user_mobile/partials/list_header", list_type: "feeds"
    = render "user_mobile/partials/no_centers"
    - if @feeds.present?
      - @feeds.each do |e|
        .content
          .left-div
            %img.visit{:src => "/assets/kidscenter/diary.png"}
          .right-div
            %img.icon{:src => "/assets/kidscenter/" + e.feed_icon + ".png"}
            %p.caption= e.name
            %p.message= truncate(strip_tags(e.desc).strip(), length: 50)
            .location-div
              %img.location{:src => "/assets/web/location.png"}
              %span.center= e.center_str
    - else
      .unfound
        %img.unfound-icon{:src => "/assets/web/cry.png"}
    / .render-more
    /   %p 加载更多 
    / .load
    /   %img.loading{:src => "/assets/loading.gif"}
