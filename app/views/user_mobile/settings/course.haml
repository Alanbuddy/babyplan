- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/settings/course-bundle"
  = stylesheet_link_tag "pages/user_mobile/settings/course-bundle", :media => "all"


- content_for :app_content do
  .content-area
    .header
      .cloud
        %p 我的课程
      %a{:href => user_mobile_settings_path}
        %img.back{:src => "/assets/mycourse/back.png"}
    - if @courses_participates.present?
      - @courses_participates.each do |e|
        .details{data: {id: e.course_inst.id.to_s}}
          .left-div
            %img.visit{:src => e.course_inst.photo.nil? ? "/assets/banner.png" : e.course_inst.photo.path}
          .right-div
            %p.caption 
              = e.course_inst.name || e.course_inst.course.name
              / %span#unpaid= e.status_str
            %p.article= truncate(strip_tags(e.course_inst.course.desc).strip(), length: 50)
            .location-div
              %img.location{:src => "/assets/web/location.png"}
              %span.center= e.course_inst.center.name
    - else
      .undiscover
        %img.icon{:src => "/assets/web/cry.png"}


