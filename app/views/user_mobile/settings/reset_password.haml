- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/settings/reset_password-bundle"
  = stylesheet_link_tag "pages/user_mobile/settings/reset_password-bundle", :media => "all"

- content_for :app_content do
  .content-area
    %a{:href => "#"}
      %img.circlelogo{:src => "/assets/register/circlelogo.png"}
    .input-box
      %form.account#origin 
        原密码:
        %input#password.input-name{:type => "password"}
    .input-box
      %form.account 
        设置密码:
        %input#new_password.input-name{:type => "password"}
    .input-box
      %form.account 
        重新输入:
        %input#password_confirm.input-name{:type => "password"}
    %a.next{:href => "javascript:void(0);"} 完成
 
   