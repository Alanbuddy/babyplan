- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/announcements/show-bundle"
  = stylesheet_link_tag "pages/user_mobile/announcements/show-bundle", :media => "all"

- content_for :app_content do
  .content-area
    .header
      %p.caption= @announcement.title
      %p.date
        = @announcement.created_at.strftime("%Y-%m-%d")
        %span.haidian= @announcement.center.present? ? @announcement.center.name : "所有儿童中心"
    - if @announcement.photo.present?
      %img.notice-1{:src => @announcement.photo.path}
    .content
      = @announcement.content.html_safe
    %a.last_page{:href => @back == "announcements" ? "/user_mobile/announcements" : "/user_mobile/feeds"}
      %img.back{:src => "/assets/noticedescription/back.png"}

      

