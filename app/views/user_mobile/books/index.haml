- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/books/index-bundle"
  = stylesheet_link_tag "pages/user_mobile/books/index-bundle", :media => "all"
  :javascript
    window.keyword="#{@keyword}"
    window.lower="#{@lower}"
    window.upper="#{@upper}"

- content_for :app_content do
  .content-area
    = render "user_mobile/partials/list_header", list_type: "books"
    = render "user_mobile/partials/no_centers"
    - if User.see_feeds(@current_user)
      .dl-div
        %dt 儿童年龄：
        %dd 
          %a{:href => "javascript:void(0);", data: {lower: "", upper: ""}} 不限
        %dd 
          %a{:href => "javascript:void(0)", data: {lower: 0, upper: 3}} 0~3
        %dd 
          %a{:href => "javascript:void(0);", data: {lower: 3, upper: 6}} 3~6
        %dd 
          %a{:href => "javascript:void(0);", data: {lower: 6, upper: 9}} 6~9
        %dd 
          %a{:href => "javascript:void(0);", data: {lower: 9, upper: 12}} 9~12
        %dd 
          %a{:href => "javascript:void(0);", data: {lower: 12, upper: 15}} 12~15
      - if @books.present?
        - @books.each do |e|
          .content{data: {id: e.id.to_s}}
            .left-div
              %img.visit{:src => e.cover.nil? ? asset_path("web/book.png") : e.cover.path}
            .right-div
              %img.icon{src: asset_path("kidscenter/hui.png")}
              %p.caption= e.name
              %p.message= truncate(strip_tags(e.desc).strip(), length: 50)
              .location-div
                %img.location{src: asset_path("web/location.png")}
                %span.center= e.center.name
        - if @current_user.try(:is_client)
          .render-more
            %p 加载更多
          .load
            %img.loading{src: asset_path("loading.gif")}
      - else
        .unfound
          %img.unfound-icon{src: asset_path("web/cry.png")}
 
