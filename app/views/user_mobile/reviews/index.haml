- content_for :app_head do
  = javascript_include_tag "pages/user_mobile/reviews/index-bundle"
  = stylesheet_link_tag "pages/user_mobile/reviews/index-bundle", :media => "all"
  :javascript
    window.course_id="#{@course_inst.id.to_s}"

- content_for :app_content do
  .head-div.bg1
    %a.back-link#back{href: "/user_mobile/courses/" + @course_inst.id.to_s + "?back=" + @back }
      %img.back{src: asset_path("wap/back.png")}
    %span.title.f16.font-color1.fb 课程评价
    %span.title.f16.font-color1.fb= "(" + @course_inst.reviews.length.to_s + ")"
  .content-div
    .item-div
      - if @reviews.present?
        - @reviews.each do |r|
          .item
            .icon-div
              %img.icon{src: r[:avatar_path].present? ? r[:avatar_path] : asset_path("wap/avatar.png")}
            .word-div
              .row-div.clearfix.font-color2
                %span.item-title.f14-op87= r[:user_name]
                %span.item-value.f12-op56= r[:created_at].strftime("%Y-%m-%d %H:%M")
              .row-div.font-color2
                %span.f14-op54.course-review 课程评分
                - r[:score].times do
                  %img.star{src: asset_path("wap/star1.png")}
                - (5 - r[:score]).times do
                  %img.star{src: asset_path("wap/star2.png")}
              .row-div.font-color2
                %p.f14-op87= r[:content]
        .render-more
          %p 点击加载更多
        .load-gif
          %img.loading{src: asset_path("wap/loading.gif")}
      - else
        .undiscover
          %img.undiscover-icon{src: asset_path("wap/empty.png")}
  - if @self_review
    .footer
      .text-div
        %textarea#text.f14-op87.font-color2
        .review-div.clearfix
          %span.f14-op87.font-color2.me 我的评价：
          %p.star-div
            %input{:checked => "checked", :name => "a", :type => "radio", :value => "0"}
            %input{:name => "a", :type => "radio", :value => "1"}
            %input{:name => "a", :type => "radio", :value => "2"}
            %input{:name => "a", :type => "radio", :value => "3"}
            %input{:name => "a", :type => "radio", :value => "4"}
            %input{:name => "a", :type => "radio", :value => "5"}
          %button.btn.f16-op87.bg1#submit 提交
             

  


