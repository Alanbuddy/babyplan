- content_for :head do
  = javascript_include_tag "pages/admin/books/show-bundle"
  = stylesheet_link_tag "pages/admin/books/show-bundle", :media => "all"

.content-area
  .manage-content
    .tabbable
      %ul.nav.nav-tabs
        %li.active
          %a#book-message{"data-toggle" => "tab", :href => "#tab1"} 绘本信息
        %li
          %a#user-review{"data-toggle" => "tab", :href => "#tab2"} 用户评价
        %li
          %a#borrow-message{"data-toggle" => "tab", :href => "#tab3"} 借阅信息
        %li
          %a#same-book{"data-toggle" => "tab", :href => "#tab4"} 同类绘本

      .tab-content
        #tab1.tab-pane.active
          .book-detail
            %form.form-inline
              %label.input-caption 绘本名称:
              %span.unedit-box#name-span= @book.name
              / %span.unedit-box#name-span= @book.name
              / - if @book.available == true
              /   %label#available-status.shelve 在架上
              / - else
              /   %label#available-status.shelve 已下架
              %label.input-caption#center-address 儿童中心:
              %span.unedit-box#address-span= @book.center.name
              / %span.unedit-box#address-span= @book.address
              - if @book.available
                %label#available-status.shelve 在架上
              - else
                %label#available-status.shelve 已下架
            .controls.controls-row
              %label.input-caption 类型:
              %span.unedit-box#type-span
              / %span.unedit-box#type-span= @book.type
              %label.input-caption 数量:
              %span.unedit-box#stock-span= @book.stock.to_s + "本"
              / %span.unedit-box#stock-span= @book.stock.to_s + "本"
              %label.input-caption#book-number 书号:
              %span.unedit-box#isbn-span= @book.isbn
              / %span.unedit-box#isbn-span= @book.isbn
            .controls.controls-row
              %label.input-caption 作者:
              %span.unedit-box#author-span= @book.author
              / %span.unedit-box#author-span= @book.author
              %label.input-caption 译者:
              %span.unedit-box#translator-span= @book.translator
              / %span.unedit-box#translator-span= @book.translator
              %label.input-caption#illustrator-label 插画作者:
              %span.unedit-box#illustrator-span= @book.illustrator
              / %span.unedit-box#illustrator-span= @book.illustrator
            .book-introduce.clearfix
              %span.introduce 书籍介绍:
              %div.introduce-details
                = @book.desc.html_safe
              %span.wangedit-area
                #edit-area
          .cover-back
            %span.cover 封面:
            - if @book.cover.present?
              = image_tag(@book.cover.path, class: "cover-img")
            - else
              %span 未上传
            %span.back 封底:
            - if @book.back.present?
              = image_tag(@book.back.path, class: "back-img")
            - else
              %span 未上传

        #tab2.tab-pane
          .undiscover
            %img.undiscover-icon{:src => "/assets/managecenter/undiscover.png"}
            %span.undiscover-message 抱歉！暂无查找信息
          .user-review-box
            .user-checkbox
              %label.checkbox.inline
                %input#inlineCheckbox1{:type => "checkbox", :value => "option1"} 未公开
              %label.checkbox.inline
                %input#inlineCheckbox2{:type => "checkbox", :value => "option2"} 已公开
            .book-description
              .user-item.clearfix
                %img.book-img{:src => "/assets/managecenter/user-img.png"}
                %p.user-name 大鱼海棠
                %p.date 2017-6-23 13:20
                %p.user-review-content 这本书看了感觉很好，儿童容易理解。
                %p.review-status#open 公开
            .book-description
              .user-item.clearfix
                %img.book-img{:src => "/assets/managecenter/user-img.png"}
                %p.user-name 大鱼海棠
                %p.date 2017-6-23 13:20
                %p.user-review-content 这本书看了感觉很好，儿童容易理解。
                %p.review-status#unopen 未公开
          .select-page 
            %span.totalitems= "共6页,总计12条"
            %span.choice-page
              .pagination.pagination-small
                %ul
                  %li
                    %a{:href => "javascript:void(0);"} «
                  / - ( (@users[:previous_page] > 2 ? @users[:previous_page] - 2 : 1) .. (@users[:next_page] < @users[:total_page] - 2 ? @users[:next_page] + 2 : @users[:total_page]) ).to_a.each do |page|
                  %li
                    %a{:href => "javascript:void(0);"} 1
                  %li
                    %a{:href => "javascript:void(0);"} »

        #tab3.tab-pane
          .undiscover
            %img.undiscover-icon{:src => "/assets/managecenter/undiscover.png"}
            %span.undiscover-message 抱歉！暂无查找信息
          .table-box
            %table.table.table-bordered.user-table
              %caption
              %thead
                %tr
                  %th 借阅人
                  %th 借阅时间
                  %th 归还时间
              %tbody
                / - @books[:data].each do |b|
                /   %tr{class: "book-record #{ b[:available] ? "available" : "unavailable" }", "data-id" => b[:id]}
                %tr
                  %td 小明
                  %td 2016-8-23
                  %td 2016-10-23
          .select-page 
            %span.totalitems= "共6页,总计12条"
            %span.choice-page
              .pagination.pagination-small
                %ul
                  %li
                    %a{:href => "javascript:void(0);"} «
                  / - ( (@users[:previous_page] > 2 ? @users[:previous_page] - 2 : 1) .. (@users[:next_page] < @users[:total_page] - 2 ? @users[:next_page] + 2 : @users[:total_page]) ).to_a.each do |page|
                  %li
                    %a{:href => "javascript:void(0);"} 1
                  %li
                    %a{:href => "javascript:void(0);"} »

        #tab4.tab-pane
          .undiscover
            %img.undiscover-icon{:src => "/assets/managecenter/undiscover.png"}
            %span.undiscover-message 抱歉！暂无查找信息
          .table-box
            %table.table.table-bordered.user-table
              %caption
              %thead
                %tr
                  %th 中心名称
                  %th 数&nbsp量
                  %th 操&nbsp作
              %tbody
                / - @books[:data].each do |b|
                /   %tr{class: "book-record #{ b[:available] ? "available" : "unavailable" }", "data-id" => b[:id]}
                - if @similar_books[:data].length == 0
                - else
                  - @similar_books[:data].each do |b|
                    %tr
                      %td= b.center.name
                      %td= b.stock.to_s + "本"
                      %td 
                        = link_to "详情", "/admin/books/" + b.id.to_s
          .select-page 
            %span.totalitems= "共6页,总计12条"
            %span.choice-page
              .pagination.pagination-small
                %ul
                  %li
                    %a{:href => "javascript:void(0);"} «
                  / - ( (@users[:previous_page] > 2 ? @users[:previous_page] - 2 : 1) .. (@users[:next_page] < @users[:total_page] - 2 ? @users[:next_page] + 2 : @users[:total_page]) ).to_a.each do |page|
                  %li
                    %a{:href => "javascript:void(0);"} 1
                  %li
                    %a{:href => "javascript:void(0);"} »
     
#editor-content.hide
  / = @book.desc.html_safe


