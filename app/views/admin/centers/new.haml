- content_for :head do
  = javascript_include_tag "http://map.qq.com/api/js?v=2.exp"
  = javascript_include_tag "pages/admin/centers/new-bundle"
  = stylesheet_link_tag "pages/admin/centers/new-bundle", :media => "all"


.content-area
  /centers-new
  .content-box
    .manage-box.clearfix
      %a#back{:href => "/admin/centers"}
        %img{src: asset_path("web/back.png")}
      %p.center-add 添加儿童中心
      .btn.end-btn{:type => "button"}
        %img.end{src: asset_path("managecenter/ticker.png")}
        完成
      %label.checkbox-inline.open#available
        %input#inlineCheckbox1{:type => "checkbox", :checked => "checked"} 暂不开放

    .manage-content
      .input-box.clearfix
        .input-left
          .form-group
            %label.input-name 中心名称:
            %input.input-area.form-control#center-name{:type => "text"}
          .form-group
            %label.input-name 开放时间:
            %input.input-area.form-control#center-open-time{:type => "text"}
          .form-group
            %label.input-name 详细地址:
            %input.input-area.form-control#center-address{:type => "text"}
        = form_tag("/", method: "post", multipart: true, id: "upload-photo-form", class: "hide") do
          = file_field_tag "photo_file", { class: "hide", accept: ".jpg,.png" }
        %a#upload-photo{href: "javascript:void(0);"}
          %img#photo{src: asset_path("web/photo.png")}
      .controls.controls-row
        %label.input-name 中心代号:
        %input.input-div.form-control#center-abbr{:type => "text"}
        %label.input-name.no-margin 公益价上限:
        %input.input-div.form-control#price-upper{:type => "text"}
        %label.input-name.no-margin#total 授课时间上限:
        %input.input-div.form-control#classtime-upper{:type => "text"}

      
      
      .center-introduce.clearfix
        %span.introduce 中心介绍:
        .wangedit-area
          #edit-area
      .map-position.clearfix
        %span.map-address 地图位置:
        %span.notice 
          请在地图上点击定位或
        %a#auto-locate{:href => "javascript:void(0);"} 自动定位
        #map-container

