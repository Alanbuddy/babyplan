- content_for :head do
  = javascript_include_tag "pages/admin/sessions/index-bundle"
  = stylesheet_link_tag "pages/admin/sessions/index-bundle", :media => "all"

.content-area
  / sessions-index
  %p.caption 欢迎访问管理员后台系统
  %img.master{:src => "/assets/managecenter/master.png"}

/ signin
#signinModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"} 
  .modal-dialog
    .modal-content
      %img.close{"aria-hidden" => "true", "data-dismiss" => "modal", :src => "/assets/managecenter/close.png"} 
      .modal-body
        .content-box
          .logo-box
            %img.sign-logo{:src => "/assets/managecenter/logo.png"}
              %span.kids-center 北京市社区儿童中心
          %p.notice.error-notice 您的账号或密码不正确
          %form.form-horizontal{:role => "form"}
            .form-group
              %label.col-sm-2.control-label{:for => "mobile"} 账&nbsp号
              .col-sm-10
                %input.unclicked-box.form-control#mobile{:placeholder => "请输入账号", :type => "text"}
            %p.email-notice 请填写完整的账号或管理员账号
            .form-group
              %label.col-sm-2.control-label{:for => "mobile"} 密&nbsp码
              .col-sm-10
                %input.unclicked-box.form-control#password{:placeholder => "请输入密码", :type => "password"}
            %button.signin.button-disabled{:href => "javascript:void(0);"} 登&nbsp录
            .checkbox
              %label.clearfix
                %input{:type => "checkbox"}
                %span.auto-signin 5天内自动登录
                %a.forget-password{"data-toggle" => "modal", "data-target" => "#forgetModal"} 忘记密码？

/ forget-passwordModal
#forgetModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      %img.close{"aria-hidden" => "true", "data-dismiss" => "modal", :src => "/assets/managecenter/close.png"}
      .modal-body
        .forget-password-box
          .logo-box
            %img.sign-logo{:src => "/assets/managecenter/logo.png"}
              %span.kids-center 北京市社区儿童中心
          %p.notice#forget-mobile-notice 请核对手机号
          %form.form-horizontal{:role => "form"}
            .form-group#notice-box
              %label.col-sm-4.control-label{:for => "forget-mobile"} 手机号
              .col-sm-8
                %input.unclicked-box.form-control#forget-mobile{:type => "text"}
            %p.notice#forget-captcha-notice 图形验证码错误
            .form-group#forget-captcha
              %label.col-sm-4.control-label{:for => "forget-captcha-input"} 图形验证码
              .col-sm-4
                %input.unclicked-box.form-control#forget-captcha-input{:type => "text"}
              .col-sm-4
                %a.refresh-captcha{href: "javascript:void(0)"}
                  = rucaptcha_image_tag(alt: 'Captcha', width: "84px", height: "34px", class: "rucaptcha-image")
            %p.notice#forget-verify-code-notice 验证码错误
            .form-group
              %label.col-sm-4.control-label{:for => "signup-mobilecode"} 验证码
              .col-sm-4
                %input.unclicked-box.form-control#forget-mobilecode{:type => "text"}
              .col-sm-4
                %button.unclicked#forget-mobile-code{:href => "javascript:void(0);"} 获取验证码
            .form-group#notice-box
              %label.col-sm-4.control-label{:for => "forget-password"} 新密码
              .col-sm-8
                %input.unclicked-box.form-control#forget-password{:type => "password"}
            %p.notice#forget-password-notice 两次密码输入不一致
            .form-group
              %label.col-sm-4.control-label{:for => "forget-confirm-password"} 确认密码
              .col-sm-8
                %input.unclicked-box.form-control#forget-confirm-password{:type => "password"}
            .forget-button
              %button#forget.button-disabled{:href => "javascript:void(0);"} 重置密码
      %a.footbox#forget-register{:href => "javascript:void(0);"}
        前往登录
        %span.right-arrow
          %img{:src => "/assets/managecenter/arrowright.png"}

  
