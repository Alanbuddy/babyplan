- content_for :head do
  = javascript_include_tag "pages/admin/announcements/show-bundle"
  = stylesheet_link_tag "pages/admin/announcements/show-bundle", :media => "all"
  :javascript
    window.aid = "#{@announcement.id.to_s}"

.content-area
  .content-box
    .manage-box.clearfix
      %a#back{:href => "/admin/announcements?profile=" + (@announcement.center.present? ? "local" : "global")}
        %img{:src => "/assets/web/back.png"}
      %p.global-notice= @announcement.center.present? ? "本区公告" : "全局公告"
      - if @announcement.center.nil?
        .btn.end-btn{:type => "button"} 
          %img.end-img{:src => "/assets/managecenter/ticker.png"}
          完成
        .btn.edit-btn{:type => "button"} 
          %img.edit-img{:src => "/assets/managecenter/edit.png"}
          编辑
        - if @announcement.is_published
          .btn#unshelve-btn.published{:type => "button"} 
            %img.unshelve{:src => "/assets/managecenter/unshelve.png"}
            %span 隐藏
        - else
          .btn#unshelve-btn.unpublished{:type => "button"} 
            %img.unshelve{:src => "/assets/managecenter/shelve.png"}
            %span 公布

    .manage-content
      .display-box
        .display-area
          %p.caption-header#show-caption= @announcement.title
          %img.photo{class: @announcement.photo.present? ? "" : "hide", src: @announcement.photo.try(:path)}
          .display-content
            = @announcement.content.html_safe

      / 点击edit-btn后display-box隐藏，edit-area显示
      .edit-area
        %form.form-inline
          %label.input-name 公告标题:
          %input.form-control#input-caption{:type => "text"}
        .phont-inline
          %span 封面配图:
          = form_tag("/", method: "post", multipart: true, id: "upload-photo-form", class: "hide") do
            = file_field_tag "photo_file", { class: "hide", accept: ".jpg,.png" }
          %a#upload-photo{href: "javascript:void(0);"}
            %img.edit-photo{:src => @announcement.photo.present? ? @announcement.photo.path : "/assets/web/add-photo.png"}
        .notice-introduce.clearfix
          %span.introduce 公告正文:
          .wangedit-area
            #edit-box


#declareModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"} 
  .modalheader
    %img.close{"aria-hidden" => "true", "data-dismiss" => "modal", :src => "/assets/managecenter/close.png"}
  .modal-body
    %p 是否确认发布本条消息
  .modal-footer
    %a.btn.yes{:href => "javascript:void(0);"} 是
    %a.btn.btn-primary.no{:href => "javascript:void(0);"} 否