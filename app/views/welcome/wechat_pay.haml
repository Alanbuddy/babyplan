- content_for :app_head do
  = javascript_include_tag "pages/welcome/wechat_pay-bundle"
  = stylesheet_link_tag "pages/welcome/wechat_pay-bundle", :media => "all"

- content_for :app_content do
  .content-area
    .header
      .cloud
        %p 购买课程
      %a{:href => "#"}
        %img.back{:src => "/assets/mybook/back.png"}
    .item-div
      .item
        .icon-div
          %img.icon{:src => "/assets/write.jpg"}
        .title 机器人之动力机械
      .details
        .span-div
          %span.left 上课中心：
          %span.right 广安门外手帕街南口社区儿童中心
        .span-div
          %span.left 详细地址：
          %span.right 北京市海淀区中关村一街32号大厦2205室
        .span-div
          %span.left 上课时间：
          %span.right 2016/9/30~2016/11/15，每周五16:00~18:00，国庆停一周
      .price-div
        .price.clearfix
          %span.float-left 市场价：
          %span.float-right 1200
        .price.clearfix
          %span.float-left 政府补贴：
          %span.float-right -200
        .price.clearfix
          %span.float-left 公益价：
          %span.float-right#public-price 1000
    %button.btn#wechat-pay{:type => "button"}　微信支付
