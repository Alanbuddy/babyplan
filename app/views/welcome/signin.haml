- content_for :app_head do
  = javascript_include_tag "pages/welcome/signin-bundle"
  = stylesheet_link_tag "pages/welcome/signin-bundle", :media => "all"

- content_for :app_content do
  .container
    %a{:href => "#"}
      %img.circlelogo{:src => "/assets/register/circlelogo.png"}
    .input-box
      %form.account 
        账号:
        %input.input-name{:type => "text"}
      %hr.under-line
    .input-box
      %form.account 
        密码:
        %input.input-name{:type => "password"}
      %hr.under-line
      .forgetpass
        %a{:href => "#"} 忘记密码
    .register
      %a{:href => "#"} 登陆
    .registaccount
      %a{:href => "#"} 注册账号