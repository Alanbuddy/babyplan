- content_for :head do
  = javascript_include_tag "pages/staff/announcements/index-bundle"
  = stylesheet_link_tag "pages/staff/announcements/index-bundle", :media => "all"
  :javascript
    window.keyword = "#{@keyword}"
    window.profile = "#{@profile}"

.content-area
  .content-box
    .manage-box
      .user-search-box
        .input-append
          %input#appendedInputButton.span2{:type => "text", :placeholder => "输入搜索关键字", :value => "#{@keyword}"}
          %button.btn#search-btn{:type => "button"}
      .btn.add-btn{:type => "button", :href => "#add-announcementModal", "data-toggle" => "modal"} 
        %img.add-img{:src => "/assets/managecenter/add.png"}
        添加本区公告
    .manage-content
      .tabbable
        %ul.nav.nav-tabs
          %li.active
            %a{"data-toggle" => "tab", :href => "#tab1"} 全局公告
          %li
            %a{"data-toggle" => "tab", :href => "#tab2"} 本区公告

        .tab-content
          #tab1.tab-pane.active
            - if @global_eles[:data].length == 0
              .undiscover
                %img.undiscover-icon{:src => "/assets/managecenter/undiscover.png"}
                %span.message 抱歉！暂无查找信息
            - else
              - @global_eles[:data].each do |e|
                .introduce
                  %img.visit{:src => e.image_path, width: "190", height: "129"}
                  %p.caption-header
                    %span.caption= e.title
                    %span#time-flag= e.created_at.strftime("%Y-%m-%d %H-%M")
                    %a.undeclared{:href => "javascript:void(0);"} 未公布
                  .desc
                    = e.plain_text
                %a.desc-click{:href => "/staff/announcements/" + e.id.to_s} 
                  详情
                  %img.desc-img{:src => "/assets/managecenter/double-right.png"}
              .select-page 
                %span.totalitems= "共#{@global_eles[:total_page]}页,总计#{@global_eles[:total_number]}条"
                %span.choice-page
                  .pagination.pagination-small
                    %ul
                      %li
                        %a{:href => "/staff/announcements?profile=global&keyword=#{@keyword}&page=#{@global_eles[:previous_page]}"} «
                      - ( (@global_eles[:previous_page] > 2 ? @global_eles[:previous_page] - 2 : 1) .. (@global_eles[:next_page] < @global_eles[:total_page] - 2 ? @global_eles[:next_page] + 2 : @global_eles[:total_page]) ).to_a.each do |page|
                        %li
                          %a{:href => "/staff/announcements?profile=global&keyword=#{@keyword}&page=#{page}"}= page
                      %li
                        %a{:href => "/staff/announcements?profile=global&keyword=#{@keyword}&page=#{@global_eles[:next_page]}"} »
          #tab2.tab-pane
            - if @local_eles[:data].length == 0
              .undiscover
                %img.undiscover-icon{:src => "/assets/managecenter/undiscover.png"}
                %span.message 抱歉！暂无查找信息
            - else
              - @local_eles[:data].each do |e|
                .introduce
                  %img.visit{:src => e.image_path, width: "190", height: "129"}
                  %p.caption-header
                    %span.caption= e.title
                    %span#time-flag= e.created_at.strftime("%Y-%m-%d %H-%M")
                    %a.undeclared{:href => "javascript:void(0);"} 未公布
                  .desc
                    = e.plain_text
                %a.desc-click{:href => "/staff/announcements/" + e.id.to_s} 
                  详情
                  %img.desc-img{:src => "/assets/managecenter/double-right.png"}
              .select-page 
                %span.totalitems= "共#{@local_eles[:total_page]}页,总计#{@local_eles[:total_number]}条"
                %span.choice-page
                  .pagination.pagination-small
                    %ul
                      %li
                        %a{:href => "/staff/announcements?profile=local&keyword=#{@keyword}&page=#{@local_eles[:previous_page]}"} «
                      - ( (@local_eles[:previous_page] > 2 ? @local_eles[:previous_page] - 2 : 1) .. (@local_eles[:next_page] < @local_eles[:total_page] - 2 ? @local_eles[:next_page] + 2 : @local_eles[:total_page]) ).to_a.each do |page|
                        %li
                          %a{:href => "/staff/announcements?profile=global&keyword=#{@keyword}&page=#{page}"}= page
                      %li
                        %a{:href => "/staff/announcements?profile=global&keyword=#{@keyword}&page=#{@local_eles[:next_page]}"} »

      
