- content_for :head do
  = javascript_include_tag "pages/staff/accounts/index-bundle"
  = stylesheet_link_tag "pages/staff/accounts/index-bundle", :media => "all"

 
.content-area
  .main-top.direction
    = render "staff/partials/account_set"
  - if @current_user.is_admin == true
    .main-content.bg2
      .table-div
        .tabbable
          %ul.nav.nav-tabs
            %li.active
              %a.f16.font-color1{"data-toggle" => "tab", :href => "#tab1"} 人员管理
          .tab-content.bg3
            #tab1.tab-pane.active
              .desc-div
                - if @staffs[:data].length == 0
                  .undiscover.f14
                    %img.undiscover-icon{src: asset_path("undiscover.png")}
                - else
                  .table-box.f14
                    %table.table.table-hover.table-height#admin
                      %thead.th-bg.font-color2
                        %tr
                          %th 手机号
                          %th 姓&nbsp&nbsp名
                          %th 状&nbsp&nbsp态
                          %th 操&nbsp&nbsp作
                      %tbody.font-color3
                        - @staffs[:data].each do |s|
                          %tr{"data-id" => s[:id]}
                            %td= s[:mobile]
                            %td= s[:name].present? ? s[:name] : "-"
                            %td.status= s[:status]
                            %td
                              - if !s[:lock]
                                %a.change_status.available.font-color-brown{:href => "javascript:void(0);"} 关闭
                              - else
                                %a.change_status.unavailable.font-color-green{:href => "javascript:void(0);"} 开通
                    = render "staff/partials/auto_paginate", locals: { instance: @staffs, url: "/staff/accounts?", page: 'page'}
                    
  - else 
    .main-content.bg2
      %button.btn.finish-normal.font-color1.btn-position#finish{type: "button"} 完成
      .table-div
        .tabbable
          %ul.nav.nav-tabs
            %li.active
              %a.f16#account-set{"data-toggle" => "tab", :href => "#tab1"} 账号设置
          .tab-content.bg3
            #tab1.tab-pane.active
              .desc
                %p.f24.font-color4.tc.bg2.work-cert 工作证
                = form_tag("/staff/accounts/" + @current_user.id.to_s, method: "put", multipart: true, id: "upload-photo-form", class: "person-div") do
                  = file_field_tag "photo_file", { class: "hide", accept: ".jpg,.png" }
                  .photo-div
                    %a.upload-div#upload-photo{href: "#"}
                      %img.bg2.photo#figure-photo{ src: @current_user.avatar.nil? ?  asset_path("default.png") : @current_user.avatar.path}
                    %img.fingure{src: asset_path("photo.png")}
                  %p.mobile
                    %span.f20.font-color3.mobile-num 手机号:
                    %span.f20.font-color3= @current_user[:mobile]
                  %p
                    %span.f20.font-color3.name 姓名:
                    = text_field_tag "user_name", "", class: "form-control font-color3", placeholder: "请输入姓名", value: @current_user.name
























