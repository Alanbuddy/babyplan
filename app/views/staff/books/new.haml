- content_for :head do
  = javascript_include_tag "pages/staff/books/new-bundle"
  = stylesheet_link_tag "pages/staff/books/new-bundle", :media => "all"
  :javascript
    window.keyword = "#{@keyword}"

.content-area
  /books-new
  .content-box
    .manage-box.clearfix
      %a#back{:href => "/staff/books"}
        %img{:src => "/assets/web/back.png"}
      %p.book-add 添加绘本
      .btn.end-btn{:type => "button", :href => "#kidsaddModal", "data-toggle" => "modal"} 
        %img.end{:src => "/assets/managecenter/ticker.png"}
        完成
      %label.checkbox-inline.open#available
        %input#inlineCheckbox1{:type => "checkbox"} 暂不上架

    .manage-content
      .controls.controls-row
        %label.input-caption 绘本名称:
        %input.input-area.form-control#book-name{:type => "text"}
        %label.input-caption#author 作者:
        %input.input-area.form-control#book-author{:type => "text"}
      .controls.controls-row
        %label.input-caption 插画作者:
        %input.input-area.form-control#book-illustrator{:type => "text"}
        %label.input-caption#translator 译者:
        %input.input-area.form-control#book-translator{:type => "text"}
        %label.input-caption#book-number 书号:
        %input.input-area.form-control#book-isbn{:type => "text"}
      .controls.controls-row
        %label.input-caption 最小适龄:
        %input.input-area.form-control#mix-age{:type => "text"}
        %label.input-caption 最大适龄:
        %input.input-area.form-control#max-age{:type => "text"}
        %label.input-caption 数量:
        %input.input-area.form-control#book-stock{:type => "text"}
      %form.form-inline
        %label.input-caption 标签:
        %span
          %ul#type-tag
            %li 冒险
            %li 奇幻       
      .book-introduce
        %span.introduce 书籍介绍:
        %span.wangedit-area
          #edit-area

      .cover-back
        %span.cover 封面:
        %a#upload-cover{href: "javascript:void(0);"}
          %img.photo{src: "/assets/web/addcover.png"}
        / - if @book.cover.present?
        /   = image_tag(@book.cover.path, id: "cover-img")
        / - else
        /   %a#upload-cover{href: "javascript:void(0);"}
        /     %img.cover-img{:src => "/assets/web/photo.png"}
        %span.back 封底:
        %a#upload-back{href: "javascript:void(0);"}
          %img.photo{src: "/assets/web/coverempty.png"}
        / - if @book.back.present?
        /   = image_tag(@book.back.path, id: "back-img")
