- content_for :head do
  = javascript_include_tag "pages/staff/books/show-bundle"
  = stylesheet_link_tag "pages/staff/books/show-bundle", :media => "all"
  :javascript
    window.keyword = "#{@keyword}"

.content
  /books-show
  .content-box
    .manage-box.clearfix
      %p.book-add 添加绘本
      .btn.edit-btn{:type => "button"} 
        %img.edit{:src => "/assets/managecenter/edit.png"}
        编辑
      .btn.unshelve-btn{:type => "button"} 
        %img.end{:src => "/assets/managecenter/unshelve.png"}
        下架

    .book-detail
      %form.form-inline
        %label.input-name 绘本名称
        %input.input-area#book-name{:type => "text"}
        %label.checkbox
          %input.checkbox-content{:type => "checkbox"} 开课

      .controls.controls-row
        %label.input-caption 类型
        %input.input-area#book-type{:type => "text"}
        %label.input-caption 数量
        %input.input-area#book-num{:type => "text"}
        %label.input-caption#book-number 书号
        %input.input-area#book-serial{:type => "text"}
      .controls.controls-row
        %label.input-caption 作者
        %input.input-area#author{:type => "text"}
        %label.input-caption 译者
        %input.input-area#translator{:type => "text"}
        %label.input-caption 插画作者
        %input.input-area#picture-author{:type => "text"}
       
      .book-introduce.clearfix
        %span.introduce 书籍介绍
        %span.wangedit-area
          #edit-area

    .borrow-message
      %span.message 信息
      %span.shelve-number 在架还剩3本
      %span.QR-code
        .btn.QRcode-btn{:type => "button"} 生成签到二维码
    .bookuse-message
      %table.table.table-hover
        %tbody
          %tr
            %td name
            %td borrow-time
            %td restore-time
          %tr
            %td name
            %td borrow-time
            %td restore-time
          
         



      

