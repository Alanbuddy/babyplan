#course-addModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"} 
  .modalheader
    %img.close{"aria-hidden" => "true", "data-dismiss" => "modal", :src => "/assets/managecenter/close.png"}
  .modal-body
    .form-group
      %label{:for => "coursename"} 课程名称
      %input.form-control#coursename{:placeholder => "请输入课程名称"}
  .modal-footer
    %a.btn.confirm{:href => "javascript:void(0);"} 确定
    %a.btn.btn-primary.cancel{:href => "javascript:void(0);"} 取消


