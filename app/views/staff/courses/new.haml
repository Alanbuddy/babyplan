- content_for :head do
  = javascript_include_tag "pages/staff/courses/new-bundle"
  = stylesheet_link_tag "pages/staff/courses/new-bundle", :media => "all"
  :javascript
    window.keyword = "#{@keyword}"


.content-area
  /courses-new
  .content-box
    .manage-box.clearfix
      %p.course-set 开设课程
      .btn.end-btn{:type => "button"} 
        %img.end{:src => "/assets/managecenter/ticker.png"}
        完成

    .manage-content
      %form.form-inline
        %label.input-name 课程名称:
        %span.unedit-box#name-span 社会科学
        %label.checkbox#available
          %input.checkbox-content{:type => "checkbox"} 上架

      .controls.controls-row
        %label.input-caption 开课编号:
        %span.course-num SHKX-
        %input.input-area#course-num{:type => "text"}
        %label.input-caption 容量:
        %input.input-area#course-capacity{:type => "text"}
        %label.input-caption 费用:
        %input.input-area#course-charge{:type => "text"}
        %label.input-caption.course-times 课次:
        %input.input-area#course-times{:type => "text"}
      .controls.controls-row
        %label.input-caption 上课时间:
        %input.input-area#course-date{:type => "text"}
        %label.input-caption.course-speaker 主讲人:
        %input.input-area#course-speaker{:type => "text"}
      .controls.controls-row
        %label.input-caption 上课地址:
        %input.input-area#course-address{:type => "text"}
      
      .calendar-desc 
        %span.class-calendar 课程日历:
        %span.notice 请在日历上添加历次上课时间
      #calendar
