- content_for :app_head do
  = javascript_include_tag "pages/staff_mobile/books/index-bundle"
  = stylesheet_link_tag "pages/staff_mobile/books/index-bundle", :media => "all"

- content_for :app_content do
  .main-div
    .header.clearfix
      %a.homepage{:href => "#"}
        %img.logo{:src => "/assets/manager/logo_mini.png"}
      %span.title 朝阳区儿童中心－张三
      %a.exit{:href => "#"}
        %img.logout{:src => "/assets/manager/logout.png", "data-target" => "#confirmModal", "data-toggle" => "modal"}
    .content
      .book
        .borrow-div
          %p.word#borrow-book 绘本借出
        .return-div
          %p.word#return-book 绘本归还
    .footer.row
      .col-xs-6.icon-div#book-borrow
        %a{:href => "#"}
          %img.icon.clicked-icon{:src => "/assets/manager/borrow_selected.png"}
        %p.clicked-word 绘本借阅
      .col-xs-6.icon-div#book-transfer
        %a{:href => "#"}
          %img.icon.unclicked-icon{:src => "/assets/manager/transport_normal.png"}
        %p.unclicked-word 绘本迁移


#confirmModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"} 
  .modal-dialog
    .modal-content
      .modalheader
        %img.close{"aria-hidden" => "true", "data-dismiss" => "modal", :src => "/assets/manager/close.png"}
      .modal-body
        %p.account 退出账号
        %p.question　是否确认退出当前账号！
        .confirm-div
          %a.line.clicked#logoff 退出
          %a{"data-dismiss" => "modal"} 取消
      
          

